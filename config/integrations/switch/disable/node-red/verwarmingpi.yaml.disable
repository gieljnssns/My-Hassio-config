  ###  Remote Raspberry Pi  ###
  - platform: mqtt
    name: "Verluchting"
    icon: mdi:fan
    state_topic: "verwarmingPi/output/verluchting/status"
    command_topic: "verwarmingPi/output/verluchting/set"
    availability_topic: "verwarmingPi/status"
    payload_available: "online"
    payload_not_available: "offline"
    payload_on: "ON"
    payload_off: "OFF"
    retain: true
    qos: 2

