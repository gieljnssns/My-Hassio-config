  alias: Beweging slaapkamer
  initial_state: 'on' 
  trigger:
    - platform: state
      entity_id: binary_sensor.pir_slaapkamer
      to: 'on'
    - platform: state
      entity_id: binary_sensor.pir_slaapkamer
      to: 'off'
      for:
        minutes: 5
  action:
    - service_template: >
        {%- if trigger.to_state.state == 'on' -%}
          input_boolean.turn_on
        {%- elif trigger.to_state.state == 'off' -%}
          input_boolean.turn_off
        {%- else -%}
          script.dummy
        {%- endif -%}
      entity_id:  input_boolean.beweging_slaapkamer
